---
import Section from "../Section.astro"

import { work } from "@cv"
---

<Section title="Experiencia laboral">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, image, url }) => {
          const startYear = new Date(startDate).getFullYear()
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Actual"
          const years = `${startYear} - ${endYear}`

          return (
            <li>
              <article>
                <header>

                  <div id="position">
                    <figure>
                      <img src={image} alt="imagen empresa" class="img-empresa">
                    </figure>
                    <div>
                      <h3>
                      <a href={url} title={`Ver ${name}`} target="_blank">
                        {name}
                      </a>
                    </h3>
                    <h4>{position}</h4>
                    </div>
                  </div>

                  <time>{years}</time>
                </header>

                <footer>
                  <p>{summary}</p>
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #ffffff;
    text-shadow: 0 0 10px rgba(0, 255, 159, 0.3);
  }

  article a {
    color: #00ff9f;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  article a:hover {
    color: #ff006f;
    text-shadow: 0 0 10px #ff006f;
    text-decoration: none;
  }

  article h4 {
    color: #b3b3b3;
    font-weight: 400;
    text-shadow: 0 0 5px rgba(179, 179, 179, 0.3);
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #00ff9f;
    font-size: 0.85rem;
    min-width: 102px;
    font-weight: 600;
    text-shadow: 0 0 5px rgba(0, 255, 159, 0.5);
  }

  img {
    height: 50px;
    border-radius: 8px;
    border: 2px solid rgba(0, 255, 159, 0.3);
    box-shadow: 0 0 10px rgba(0, 255, 159, 0.2);
    transition: all 0.3s ease;
  }

  img:hover {
    border-color: #00ff9f;
    box-shadow: 0 0 20px rgba(0, 255, 159, 0.5);
    transform: scale(1.05);
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }

  #position {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap:5px
  }
</style>
