  h2::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, #00ff9f, #ff006f);
    border-radius: 2px;
    box-shadow: 0 0 10px rgba(0, 255, 159, 0.5);
  }

  @media (width <= 700px) {
